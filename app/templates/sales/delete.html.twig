{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.sales_delete'|trans({'%id%': sales.id|default('')}) }}
{% endblock %}

{% block body %}
    {{ include('menu.html.twig') }}
    <h2>{{ 'title.sales_delete'|trans({'%id%': sales.id|default('')}) }}</h2>
    {% if sales is defined and sales|length %}
        <table class="table table-striped" id="tab">
            <tr>
                <th>{{ 'label.id'|trans }}</th>
                <td>{{ sales.id }}</td>
            </tr>
            <tr>
                <th>{{ 'label.created_at'|trans }}</th>
                <td>{{ sales.createdAt|date('d.m.Y') }}</td>
            </tr>
            <tr>
                <th>{{ 'label.category'|trans }}</th>
                <td>{{ sales.category.name }}</td>
            </tr>
            <tr>
                <th>{{ 'label.title'|trans }}</th>
                <td>{{ sales.title }}</td>
            </tr>
            <tr>
                <th>{{ 'label.smartphone'|trans }}</th>
                <td>{{ sales.smartphone }}</td>
            </tr>
            <tr>
                <th>{{ 'label.acc'|trans }}</th>
                <td>{{ sales.acc }}</td>
            </tr>
            <tr>
                <th>{{ 'label.add'|trans }}</th>
                <td>
                    {% if sales.adds is defined and sales.adds|length %}
                        {% for adds in sales.adds %}
                            {{ adds.comment }}<br>
                        {% endfor %}
                    {% else %}

                    {% endif %}
                </td>
            </tr>
        </table>
    {% else %}
        <p>
            {{ 'message.record_not_found'|trans }}
        </p>
    {% endif %}
    {% include 'default/_form.html.twig' with {
        page_title: 'title.sales_delete'|trans({'%id%': sales.id|default('')}),
        form: form,
        submit_label: 'action.delete'|trans,
        back_to_list_path: 'sales_index',
    } %}
{% endblock %}